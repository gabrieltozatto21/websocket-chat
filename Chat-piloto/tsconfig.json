{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es6"
    ],                                  
    "module": "commonjs",  
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": false,
    "resolveJsonModule": true,                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,         
    "noImplicitAny": true,                             
    "skipLibCheck": true                                
  }
}
